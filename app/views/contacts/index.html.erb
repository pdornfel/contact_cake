<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Fact Count</th>
      <th>Display</th>
      <th>Add Fact</th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.facts.count %></td>
        <td><%= link_to "Display", contact %></td>
        <td><%= link_to "Add Fact", new_contact_fact_path(contact) %></td>
      </tr>
      <% end %>
  </tbody>
</table>
<br>
<%= link_to "New Contact", new_contact_path %>