<h1>New Contact</h1>

<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div><br>

  <div class="field">
    <%= f.label "Belong to user" %><br>
    <%= f.text_field :user_id %>
  </div><br>

<!-- render for fact  -->

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

<%= link_to "Back", contacts_path %>