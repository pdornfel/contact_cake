<div class="panel callout radius small-8">
  <h1><%= @contact.name %></h1>
</div>



<ul class="small-8" data-clearing>
  <li><%= image_tag(@contact.contact_photo,size: "250x250")  %></li>
</ul>
<br>
  <ul class='panel callout radius small-8'>
    <br>
      <li><%= link_to "All Contacts", contacts_path %></li>
      <li><%= link_to "Edit Contact", edit_contact_path %></li>
      <li><%= link_to "Add Fact", new_contact_fact_path(@contact) %></li>
  </ul>

<div class='panel callout radius small-8'>
<h5>Facts:</h5>

<% @contact.facts.each do |fact| %>
  <h4><%= fact.fact %></h4>
  <%= link_to "Edit Fact", edit_contact_fact_path(@contact.id, fact) %>
  <br><br>
<% end %>
</div>









