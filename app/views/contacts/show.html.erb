
<div class='row'>

  <div class='large-4 columns'>
    <div class="panel callout radius">
      <h1 class='show-name'><%= link_to "#{@contact.name}", root_path %></h1>
    </div>
  </div>

<% if @contact.latitude != nil %>
  <div class='large-4 columns' id="map-show-contact"></div>
<% end %>

  <div class='large-4 columns'>
    <%= image_tag(@contact.contact_photo, class: 'picture') %>
  </div>

</div>

<div class='row'>
  <div class='centered'>
    <div class='panel callout radius'>
      <h5><%= link_to "Add Fact", new_contact_fact_path(@contact) %></h5>
    </div>
  </div>

  <div class=''>
    <div class='panel callout radius'>
      <% @contact.facts.each do |fact| %>
        <h5 class='centered'><%= fact.fact %></h5>
      <% end %>
    </div>
    <h5><%= link_to "Edit Contact or Facts", edit_contact_path %></h5>
  </div>











